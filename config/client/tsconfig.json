{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"rootDir": "../../src/client/",
		"jsx": "react",
		"allowJs": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"../../src/client/**/*"
	],
}