{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"jsx": "react",
		"esModuleInterop": true,
		"removeComments": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": "src/",
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"paths": {
			"style-imports": ["styles/imports.sass"],
			"styles/*": ["styles/modules/*"],
			"components/*": ["components/*"],
			"utils/*": ["utils/*"],
			"layouts/*": ["layouts/*"],
			"pages/*": ["pages/*"],
			"res/*": ["res/*"],
			"types/*": ["types/*"]
		}
	},
	"include": ["src/index.tsx", "src/global.d.ts"]
}
