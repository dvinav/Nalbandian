mixin Select(select_name, select_icon)
	.input-group
		span.input-group-text
			i.material-icons(tabindex='0', role='button')= select_icon
		select.form-select(id='input-'+form+'-'+input_name,)
			block

mixin Button(button_label, button_icon, button_type='button')
	button.btn(type=button_type, class!=attributes.class)
		i.material-icons-round.me-1(aria-hidden='true')= button_icon
		span= button_label

mixin SearchBox()
	.searchBox.input-group
		span.input-group-text
			i.material-icons-round(tabindex='0', role='button') search
		input.form-control.shadow-none(type='text', name='query', placeholder='Որոնել')
